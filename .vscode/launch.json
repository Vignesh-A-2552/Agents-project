{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug FastAPI App",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "DEBUG": "true"
            },
            "args": [],
            "justMyCode": false,
            "python": "${workspaceFolder}/agents-venv/Scripts/python.exe"
        },
        {
            "name": "Debug with Uvicorn",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "main:app",
                "--host", "0.0.0.0",
                "--port", "8000",
                "--reload",
                "--log-level", "debug"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "DEBUG": "true"
            },
            "justMyCode": false,
            "python": "${workspaceFolder}/agents-venv/Scripts/python.exe"
        },
        {
            "name": "Test Prompt Loading",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/test_prompts.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "DEBUG": "true"
            },
            "justMyCode": false,
            "python": "${workspaceFolder}/agents-venv/Scripts/python.exe"
        },
        {
            "name": "Debug Code Review Service",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/debug_service.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "DEBUG": "true"
            },
            "justMyCode": false,
            "python": "${workspaceFolder}/agents-venv/Scripts/python.exe"
        },
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "DEBUG": "true"
            },
            "justMyCode": false,
            "python": "${workspaceFolder}/agents-venv/Scripts/python.exe"
        }
    ]
}